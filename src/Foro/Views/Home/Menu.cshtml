<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

</head>
<body>
    <nav id="navegacionPrincipal">
        <div id="ulNavegacion">
            <a href="@Url.Action("Index", "Home")"><img src="~/Content/img/logo.png" id="logo" /></a>
            <input type="text" id="buscadorPrincipal" placeholder="Buscar..." />
        </div>
        <div id="cajaBotonesSesion">
            @if (Session["usuario"] == null)
            {
                <span class="botonesDeSesion" id="inicioSesionMenu"><a href="@Url.Action("IniciarSesion", "Login")" id="iniSesion">Iniciar sesión</a></span>
                <span class="botonesDeSesion" id="registrarSesionMenu"><a href="@Url.Action("Registro", "Login")" id="regSesion">Registrarse</a></span>
            }
            else
            {
                <a href="@Url.Action("CerrarSesion", "Login")"><span class="spans material-symbols-outlined">logout</span></a>
                <span class="material-symbols-outlined" id="iconoPerfil">person</span>                                   
            }

        </div>
    </nav>
    <div id="separadorNav"></div>
    <div>
        @RenderBody()
    </div>
    <footer>
        Política de privacidad
    </footer>
</body>

@Styles.Render("~/Content/css/style.css")
@Styles.Render("~/Content/img")
</html>
