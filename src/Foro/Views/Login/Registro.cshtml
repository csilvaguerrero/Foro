<div id="contenedorInicioSesion">
    <div id="divInicioSesion">
        <div id="tituloInicioSesion">Registro</div>
        @using (Html.BeginForm("Registro", "Login", FormMethod.Post, htmlAttributes: new { id = "formularioInicioSesion" }))
        {
            <div class="inputFormularios">
                <label class="labelFormularioSesion">Usuario</label>
                <input type="text" class="inputFormularioSesion" name="usuario" />
            </div>
            <br /><br /><br />
            <div class="inputFormularios">
                <label class="labelFormularioSesion">Contraseña</label>
                <input type="password" class="inputFormularioSesion" name="contrasenia" />
            </div>
            <input type="submit" value="Registrarse" id="botonInicioSesion" />
            <p class="textoFormularioSesion">
                ¿Tienes una cuenta? Inicia sesión
            </p>            
        }
    </div>
</div>